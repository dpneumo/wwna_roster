<%= render  partial: 'shared/subtable_header_bs',
            locals: { title: "Emails:",
                      link_text: "New Email",
                      path: new_email_path(person_id: @person.id) } %>

<table class='table table-sm table-bordered table-hover'>
  <thead class='thead-light'>
    <tr>
      <th>Email</th>
      <th>Location</th>
      <th>Preferred</th>
      <th>Note</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @person.emails.each do |email| %>
      <tr>
        <td><%= email.addr %></td>
        <td><%= email.locn %></td>
        <td><%= email.preferred %></td>
        <td><%= email.note %></td>
        <td><%= link_to 'Show', email %></td>
        <td><%= link_to 'Edit', edit_email_path(email) %></td>
        <td><%= link_to 'Destroy', email, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
