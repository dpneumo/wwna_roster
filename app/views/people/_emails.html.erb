<h5>Emails:</h5>

<div class='container'>
  <table class='table table-sm table-bordered table-hover'>
    <thead class='thead-light'>
      <tr>
        <th>Email</th>
        <th>Location</th>
        <th>Preferred</th>
        <th>Note</th>
      </tr>
    </thead>

    <tbody>
      <% @person.emails.each do |e| %>
        <tr>
          <td><%= e.addr %></td>
          <td><%= e.locn %></td>
          <td><%= e.preferred %></td>
          <td><%= e.note %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
