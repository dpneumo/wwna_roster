<div class="row">
  <div class="col-sm-8"><h5>Emails:</h5></div>
  <div class="col-sm-4">
    <%= link_to "New Email", new_email_path(person_id: @person.id) %>
  </div>
</div>

<table class='table table-sm table-bordered table-hover'>
  <thead class='thead-light'>
    <tr>
      <th>Email</th>
      <th>Location</th>
      <th>Preferred</th>
      <th>Note</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @person.emails.each do |email| %>
      <tr>
        <td><%= email.addr %></td>
        <td><%= email.locn %></td>
        <td><%= email.preferred %></td>
        <td><%= email.note %></td>
        <td><%= link_to 'Show', email %></td>
        <td><%= link_to 'Edit', edit_email_path(email) %></td>
        <td><%= link_to 'Destroy', email, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
