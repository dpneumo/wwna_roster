<h5>Emails:</h5>

<div class='container'>
  <table class='table table-sm table-bordered table-hover'>
    <thead class='thead-light'>
      <tr>
        <th>Email</th>
        <th>Locn</th>
        <th>Preferred</th>
      </tr>
    </thead>

    <tbody>
      <% @person.person_emails.each do |pe| %>
        <tr>
          <td><%= pe.email.addr %></td>
          <td><%= pe.locn %></td>
          <td><%= pe.preferred %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
