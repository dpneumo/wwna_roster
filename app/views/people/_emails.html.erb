<%= render  partial: 'shared/subtable_header_bs',
            locals: { title: "Emails:",
                      link_text1: "New Email",
                      path1: new_email_path(person_id: @person.id),
                      link_text2: nil,
                      path2: nil } %>

<table class='table table-sm table-bordered table-hover'>
  <thead class='thead-light'>
    <tr class='d-flex'>
      <th class='col-3'>Email</th>
      <th class='col-2'>Location</th>
      <th class='col-1'>Preferred</th>
      <th class='col-3'>Note</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @person.emails.each do |email| %>
      <tr class='d-flex'>
        <td class='col-3'><%= email.addr %></td>
        <td class='col-2'><%= email.locn %></td>
        <td class='col-1'><%= email.preferred %></td>
        <td class='col-3'><%= email.note %></td>
        <td class='col-1'><%= link_to 'Show', email %></td>
        <td class='col-1'><%= link_to 'Edit', edit_email_path(email) %></td>
        <td class='col-1'><%= link_to 'Destroy', email, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
