<p id="notice"><%= notice %></p>

<h1>People</h1>

<%= render 'search_form' %>
<br>

<table class='table table-sm table-bordered table-hover', id='people'>
  <thead class='thead-light'>
    <tr>
      <th>Nickname</th>
      <th>Name</th>
      <th>Suffix</th>
      <th>Honorific</th>
      <th>House</th>
      <th>Role</th>
      <th>Status</th>
      <th>Note</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @people.each do |p| %>
      <% present(p) do |person| %>
        <tr>
          <td><%= person.nickname %></td>
          <td><%= person.sortable_name %></td>
          <td><%= person.suffix %></td>
          <td><%= person.honorific %></td>
          <td><%= person.house_id ? person.house_address : '' %></td>
          <td><%= person.role %></td>
          <td><%= person.status %></td>
          <td><%= person.note %></td>
          <td><%= link_to 'Detail', person_detail_path(person) %></td>
          <td><%= link_to 'Edit', edit_person_path(person) %></td>
          <td><%= link_to 'Destroy', person, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<%== pagy_bootstrap_nav(@pagy) %>

<br>

<%= link_to 'New Person', new_person_path %>
