<%= render  partial: 'shared/subtable_header_bs',
            locals: { title: "Phones:",
                      link_text1: "New Phone",
                      path1: new_phone_path(person_id: @person.id),
                      link_text2: nil,
                      path2: nil } %>

<table class='table table-sm table-bordered table-hover'>
  <thead class='thead-light'>
    <tr>
      <th>Phone</th>
      <th>Location</th>
      <th>Preferred</th>
      <th>Msg Capable</th>
      <th>Note</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @person.phones.each do |phone| %>
      <tr>
        <td><%= phone.ph_number %></td>
        <td><%= phone.locn %></td>
        <td><%= phone.preferred %></td>
        <td><%= phone.txt_capable %></td>
        <td><%= phone.note %></td>
        <td><%= link_to 'Show', phone %></td>
        <td><%= link_to 'Edit', edit_phone_path(phone) %></td>
        <td><%= link_to 'Destroy', phone, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
