<%= render  partial: 'shared/subtable_header_bs',
            locals: { title: "Phones:",
                      link_text1: "New Phone",
                      path1: new_phone_path(person_id: @person.id),
                      link_text2: nil,
                      path2: nil } %>

<table class='table table-sm table-bordered table-hover'>
  <thead class='thead-light'>
    <tr class='d-flex'>
      <th class='col-3'>Phone</th>
      <th class='col-2'>Location</th>
      <th class='col-1'>Preferred</th>
      <th class='col-1'>Msg Capable</th>
      <th class='col-2'>Note</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @person.phones.each do |phone| %>
      <tr class='d-flex'>
        <td class='col-3'><%= phone.ph_number %></td>
        <td class='col-2'><%= phone.locn %></td>
        <td class='col-1'><%= phone.preferred %></td>
        <td class='col-1'><%= phone.txt_capable %></td>
        <td class='col-2'><%= phone.note %></td>
        <td class='col-1'><%= link_to 'Show', phone %></td>
        <td class='col-1'><%= link_to 'Edit', edit_phone_path(phone) %></td>
        <td class='col-1'><%= link_to 'Destroy', phone, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
