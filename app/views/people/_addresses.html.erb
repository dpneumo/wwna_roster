<%= render  partial: 'shared/subtable_header_bs',
            locals: { title: "Addresses:",
                      link_text: "New Address",
                      path: new_address_path(person_id: @person.id) } %>

<table class='table table-sm table-bordered table-hover'>
  <thead class='thead-light'>
    <tr>
      <th>Address</th>
      <th>Location</th>
      <th>Preferred</th>
      <th>Note</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @person.addresses.each do |address| %>
      <tr>
        <td><%= address.address %></td>
        <td><%= address.locn %></td>
        <td><%= address.preferred %></td>
        <td><%= address.note %></td>
        <td><%= link_to 'Show', address %></td>
        <td><%= link_to 'Edit', edit_address_path(address) %></td>
        <td><%= link_to 'Destroy', address, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
