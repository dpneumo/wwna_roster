<h5>Addresses</h5>

<div class='container'>
  <table class='table table-sm table-bordered table-hover'>
    <thead class='thead-light'>
      <tr>
        <th>Address</th>
        <th>Location</th>
        <th>Preferred</th>
        <th>Note</th>
      </tr>
    </thead>

    <tbody>
      <% @person.addresses.each do |pa| %>
        <tr>
          <td><%= pa.address %></td>
          <td><%= pa.locn %></td>
          <td><%= pa.preferred %></td>
          <td><%= pa.note %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
