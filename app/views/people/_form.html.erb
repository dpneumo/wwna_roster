<%= form_with(model: person, local: true) do |form| %>
  <% errors = Shared::ShowErrs.new(person) %>
  <% input = Shared::Inputs.new(form) %>

  <%= errors.show %>

  <%= input.row([ { attribute: :nickname }  ]) %>

  <%= input.row([ { attribute: :first },
                  { attribute: :middle },
                  { attribute: :last }      ]) %>

  <%= input.row([ { attribute: :suffix },
                  { attribute: :honorific } ]) %>


  <%= input.row([ { attribute: :house_id, kind: :select,
                    collection: House.select_list,
                    blank: true,
                    selected: person.house_id,
                    disabled: @disable_house_select },
                  { attribute: :house_id, kind: :hidden,
                    value: person.house_id },
                  { attribute: :role, kind: :select,
                    collection: Person.roles,
                    selected: person.role || "Unknown" },
                  { attribute: :status, kind: :select,
                    collection: Person.statuses,
                    selected: person.role || "Unknown" }  ]) %>

  <%= input.row([ { attribute: :note, kind: :textarea } ]) %>

  <%= render  partial: 'shared/form_submit_bs',
              locals: { form: form , my_label: nil} %>

<% end %>
