<%= form_with(model: person, local: true) do |form| %>

  <%= render  partial: 'shared/errors',
              locals: { my_model: @person } %>

  <%= render  partial: 'shared/text_bs',
              locals: { form: form, my_field: :nickname } %>

  <%= render  partial: 'shared/text_bs',
              locals: { form: form, my_field: :first } %>

  <%= render  partial: 'shared/text_bs',
              locals: { form: form, my_field: :middle } %>

  <%= render  partial: 'shared/text_bs',
              locals: { form: form, my_field: :last } %>

  <%= render  partial: 'shared/text_bs',
              locals: { form: form, my_field: :suffix } %>

  <%= render  partial: 'shared/text_bs',
              locals: { form: form, my_field: :honorific } %>

  <%= render  partial: 'shared/text_bs',
              locals: { form: form, my_field: :note } %>

  <%= render  partial: 'shared/grouped_flatselect_bs',
              locals: { form: form, my_field: :house_id,
                        my_grouped_options: House.for_select} %>

  <%= render  partial: 'shared/select_bs',
              locals: { form: form, my_field: :role,
                        my_collection: Person.roles } %>

  <%= render  partial: 'shared/select_bs',
              locals: { form: form, my_field: :status,
                        my_collection: Person.states } %>

  <%= render  partial: 'shared/form_submit_bs',
              locals: { form: form , my_label: nil} %>

<% end %>
