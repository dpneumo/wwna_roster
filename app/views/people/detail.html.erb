<% presenter = Shared::Presenters.new(@person) %>

<%= presenter.show_in_row([:nickname]) %>
<%= presenter.show_in_row([:first, :middle, :last]) %>
<%= presenter.show_in_row([:suffix, :honorific, :role]) %>
<%= presenter.show_in_row([ [:house_address, 'House'],
                            [:status] ]) %>
<%= presenter.show_in_row([ [:preferred_email],
                            [:preferred_phone],
                            [:preferred_address] ]) %>

<div class="row">
  <div class="col-sm">
    <%= render 'emails' %>
  </div>
</div>

<div class="row">
  <div class="col-sm">
    <%= render 'phones' %>
  </div>
</div>

<div class="row">
  <div class="col-sm">
    <%= render 'addresses' %>
  </div>
</div>

<%= presenter.show_in_row([:note]) %>

<%= link_to 'Edit', edit_person_path(@person) %> |
<%= link_to 'List', people_path %>
