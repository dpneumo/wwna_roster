<p id="notice"><%= notice %></p>

<h1>Contributions</h1>

<table class='table table-sm table-bordered table-hover'>
  <thead class='thead-light'>
    <tr>
      <th>House</th>
      <th>Date paid</th>
      <th>Amount</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @contributions.each do |c| %>
      <% present(c) do |contribution| %>
        <tr>
          <td><%= contribution.house_address %></td>
          <td><%= contribution.date_paid %></td>
          <td><%= contribution.amount %></td>
          <td><%= link_to 'Show', contribution_path(contribution.id) %></td>
          <td><%= link_to 'Edit', edit_contribution_path(contribution.id) %></td>
          <td><%= link_to 'Destroy', contribution_path(contribution.id), 
                                     method: :delete, 
                                     data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<%== pagy_bootstrap_nav(@pagy) %>

