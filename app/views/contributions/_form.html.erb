<%= form_with(model: contribution, local: true) do |form| %>
  <% errors = Shared::ShowErrs.new(contribution) %>
  <% input = Shared::Inputs.new(form) %>

  <%= errors.show %>

  <%= input.row([ { attribute: :house_id, kind: :select,
                    collection: House.select_list,
                    selected: contribution.house_id,
                    disabled: contribution.house_id },
                  { attribute: :house_id, kind: :hidden,
                    value: contribution.house_id } ]) %>

  <%= input.row([ { attribute: :date_paid, kind: :date_select } ]) %>

  <%= input.row([ { attribute: :amount } ]) %>

  <%= render  partial: 'shared/form_submit_bs',
              locals: { form: form } %>
<% end %>
