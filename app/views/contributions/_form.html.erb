<%= form_with(model: contribution, local: true) do |form| %>

  <%= render  partial: 'shared/errors',
              locals: { my_model: @contribution } %>


  <% if contribution.house_id %>
    <%= render  partial: 'shared/readonly_field_bs',
                locals: { form: form, my_field: :house_id,
                          my_label: "House",
                          my_id: contribution.house_id,
                          my_display: :street_number } %>
  <% else %>
    <%= render  partial: 'shared/collectselect_bs',
                locals: { form: form, my_field: :house_id,
                          my_collection: House.all,
                          my_display: :street_number } %>
  <% end %>

  <%= render  partial: 'shared/dateselect_bs',
              locals: { form: form, my_field: :date_paid } %>

  <%= render  partial: 'shared/text_bs',
              locals: { form: form, my_field: :amount } %>

  <%= render  partial: 'shared/form_submit_bs',
              locals: { form: form } %>

<% end %>
