<%= form_with(model: user, local: true) do |form| %>
  <% errors = Shared::ShowErrs.new(user) %>
  <% input = Shared::Inputs.new(form) %>

  <%= errors.show %>

  <%= input.row([ { attribute: :first_name },
                  { attribute: :last_name  } ]) %>

  <%= input.row([ { attribute: :role, kind: :select,
                    collection: User.roles,
                    selected: user.role,
                    blank: false } ]) %>

  <%= render  partial: 'shared/form_submit_bs',
              locals: { form: form } %>
<% end %>
