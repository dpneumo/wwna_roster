<%= form_with(model: user, local: true) do |form| %>
  <% present(user) do |user| %>
    <%  user.form = form %>
    <%= user.show_errors %>

    <%= user.input_row([ { attribute: :first_name },
                    { attribute: :last_name  } ]) %>

    <%= user.input_row([ { attribute: :role, kind: :select,
                      collection: user.roles,
                      selected: user.role,
                      blank: false } ]) %>

    <%= render  partial: 'shared/form_submit_bs',
                locals: { form: form } %>
  <% end %>
<% end %>
