<%= render  partial: 'shared/subtable_header_bs',
            locals: { title: "Ownerships:",
                      link_text: "New Ownership",
                      path: new_ownership_path(house_id: @house.id) } %>

<table class='table table-sm table-bordered table-hover'>
  <thead class='thead-light'>
    <tr>
      <th>Person</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @house.ownerships.each do |ownership| %>
      <tr>
        <td><%= ownership.person.fullname %></td>
        <td><%= link_to 'Show', ownership %></td>
        <td><%= link_to 'Edit', edit_ownership_path(ownership) %></td>
        <td><%= link_to 'Destroy', ownership, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
