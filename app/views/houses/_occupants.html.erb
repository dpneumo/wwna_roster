<%= render  partial: 'shared/subtable_header_bs',
            locals: { title: "Occupants:",
                      link_text1: "New Person as Occupant",
                      path1: new_occupant_path(house_id: house.id),
                      link_text2: "Add Occupant",
                      path2: non_occupants_path } %>

<table class='table table-sm table-bordered table-hover'>
  <thead class='thead-light'>
    <tr>
      <th>Occupant</th>
      <th>Role</th>
      <th>Status</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% house.occupants.each do |o| %>
      <% present(o) do |occupant| %>
        <tr>
          <td><%= occupant.fullname %></td>
          <td><%= occupant.role %></td>
          <td><%= occupant.status %></td>
          <td><%= link_to 'Show', occupant %></td>
          <td><%= link_to 'Edit', edit_person_path(occupant) %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>
