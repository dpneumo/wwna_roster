<%= render  partial: 'shared/subtable_header_bs',
            locals: { title: "Occupants:",
                      link_text: "New Occupant",
                      path: new_occupant_path(house_id: @house.id) } %>

<table class='table table-sm table-bordered table-hover'>
  <thead class='thead-light'>
    <tr>
      <th>Person</th>
      <th>Relation</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @house.occupants.each do |occupant| %>
      <tr>
        <td><%= occupant.person.fullname %></td>
        <td><%= occupant.relation %></td>
        <td><%= occupant.status %></td>
        <td><%= link_to 'Show', occupant %></td>
        <td><%= link_to 'Edit', edit_occupant_path(occupant) %></td>
        <td><%= link_to 'Destroy', occupant, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
