<row class="row">
  <div class="col-sm">
    <h5>Occupants:</h5>
  </div>
  <div class="col"></div>
  <div class="col-sm">
    <%= link_to 'New Occupant', new_occupant_path %>
  </div>
</row>

<div class='container'>
  <table class='table table-sm table-bordered table-hover'>
    <thead class='thead-light'>
      <tr>
        <th>Person</th>
        <th>Relation</th>
        <th>Status</th>
      </tr>
    </thead>

    <tbody>
      <% @house.occupants.each do |occupant| %>
        <tr>
          <td><%= occupant.person.fullname %></td>
          <td><%= occupant.relation %></td>
          <td><%= occupant.status %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
