<%= render  partial: 'shared/subtable_header_bs',
            locals: { title: "Occupants:",
                      link_text: "New Occupant",
                      path: new_person_path(house_id: @house.id) } %>

<table class='table table-sm table-bordered table-hover'>
  <thead class='thead-light'>
    <tr>
      <th>Occupant</th>
      <th>Role</th>
      <th>Status</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @occupants.each do |occupant| %>
      <tr>
        <td><%= occupant.fullname %></td>
        <td><%= occupant.role %></td>
        <td><%= occupant.status %></td>
        <td><%= link_to 'Show', occupant %></td>
        <td><%= link_to 'Edit', edit_person_path(occupant) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
