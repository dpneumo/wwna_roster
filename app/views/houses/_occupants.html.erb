<%= render  partial: 'shared/subtable_header_bs',
            locals: { title: "People:",
                      link_text: "New Person",
                      path: new_person_path(house_id: @house.id) } %>

<table class='table table-sm table-bordered table-hover'>
  <thead class='thead-light'>
    <tr>
      <th>Person</th>
      <th>Role</th>
      <th>Status</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @occupants.each do |person| %>
      <tr>
        <td><%= person.fullname %></td>
        <td><%= person.role %></td>
        <td><%= person.status %></td>
        <td><%= link_to 'Show', person %></td>
        <td><%= link_to 'Edit', edit_person_path(person) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
