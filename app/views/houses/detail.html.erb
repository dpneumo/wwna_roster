<div class="row">
  <div class="col-sm">
    <p id="notice"><%= notice %></p>
  </div>
</div>


  <div class="row">
    <div class="col-sm">
      <p>
        <strong>Street Number:</strong>
        <%= @house.street_number %>
      </p>
    </div>

    <div class="col-sm">
      <p>
        <strong>Linked lot:</strong>
        <%= @house.linked_lot_id %>
      </p>
    </div>
  </div>


  <div class="row">
    <div class="col-sm">
      <p>
        <strong>Member Flag Group:</strong>
        <%= @house.flag %>
      </p>
    </div>

    <div class="col-sm">
      <p>
        <strong>Rental Property:</strong>
        <%= @house.rental %>
      </p>
    </div>

    <div class="col-sm">
      <p>
        <strong>Listed For Sale:</strong>
        <%= @house.listed %>
      </p>
    </div>
  </div>


  <div class="row">
    <div class="col-sm">
      <p>
        <strong>Status:</strong>
        <%= @house.status %>
      </p>
    </div>
  </div>


  <div class="row">
    <div class="col-sm">
      <%= render 'occupants' %>
    </div>
  </div>


  <div class="row">
    <div class="col-sm">
      <%= render 'contributions' %>
    </div>
  </div>


  <div class="row">
    <div class="col-sm">
      <%= render 'ownerships' %>
    </div>
  </div>


  <div class="row">
    <div class="col-sm">
      <p>
        <strong>Note:</strong>
        <%= @house.note %>
      </p>
    </div>
  </div>

