<p id="notice"><%= notice %></p>

<div class='row'>
  <div class="field col-sm-2">
    <h1>Houses</h1>
  </div>
  <div class="field col-sm-10">
    <%= render 'search_form' %>
  </div>
</div>

<div class='container'>
  <table class='table table-sm table-bordered table-hover'>
    <thead class='thead-light'>
      <tr>
        <th><%= sort_link(@q,:house_address, [:street, :number], 'Address') %></th>
        <th>Linked lot</th>
        <th><%= sort_link(@q,:flag) %></th>
        <th><%= sort_link(@q,:rental) %></th>
        <th><%= sort_link(@q,:listed) %></th>
        <th><%= sort_link(@q,:status) %></th>
        <th>Note</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @houses.each do |house| %>
        <tr>
          <td><%= house.house_address %></td>
          <td><%= house.linked_lot_id %></td>
          <td><%= house.flag %></td>
          <td><%= house.rental %></td>
          <td><%= house.listed %></td>
          <td><%= house.status %></td>
          <td><%= house.note %></td>
          <td><%= link_to 'Detail', house_detail_path(house) %></td>
          <td><%= link_to 'Edit', edit_house_path(house) %></td>
          <td><%= link_to 'Destroy', house, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <%== pagy_bootstrap_nav(@pagy) %>
  <br>
  <%= link_to 'New House', new_house_path %>
</div>
