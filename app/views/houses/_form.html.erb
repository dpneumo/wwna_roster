<%= form_with(model: house, local: true) do |form| %>
  <% errors = Shared::ShowErrs.new(house) %>
  <% input = Shared::Inputs.new(form) %>

  <%= errors.show %>

  <%= input.row([ {attribute: :number},
                  {attribute: :street} ]) %>

  <%= input.row([ {attribute: :latitude},
                  {attribute: :longitude},
                  {attribute: :image_link} ]) %>

  <%= input.row([ { kind: :select, attribute: :status,
                    collection:  House.statuses, selected: "Occupied" },
                  { kind: :select, attribute: :linked_lot_id,
                    collection: grouped_options_for_select(House.for_select),
                    blank: true,
                    width: 3 }  ]) %>

  <%= input.row([ { kind: :checkbox, attribute: :flag,
                    label: "Member Flag Group" },
                  { kind: :checkbox, attribute: :rental,
                    label: "Rental Property" },
                  { kind: :checkbox, attribute: :listed,
                    label: "For Sale" }        ]) %>

  <%= input.row([ { kind: :textarea, attribute: :note } ]) %>

  <%= render  partial: 'shared/form_submit_bs',
              locals: { form: form } %>

<% end %>
