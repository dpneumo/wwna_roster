<p id="notice"><%= notice %></p>

<h1>Addresses</h1>

<div class='container'>
  <table id="addresses" class="table table-striped table-bordered" style="width: 1000px;">
    <thead>
      <tr>
        <th>Number</th>
        <th>Street</th>
        <th>City</th>
        <th>State</th>
        <th>Zip</th>
        <th>Latitude</th>
        <th>Longitude</th>
        <th>Image link</th>
        <th>Note</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @addresses.each do |address| %>
        <tr>
          <td><%= address.number %></td>
          <td><%= address.street %></td>
          <td><%= address.city %></td>
          <td><%= address.state %></td>
          <td><%= address.zip %></td>
          <td><%= address.latitude %></td>
          <td><%= address.longitude %></td>
          <td><%= address.image_link %></td>
          <td><%= address.note %></td>
          <td><%= link_to 'Show', address %></td>
          <td><%= link_to 'Edit', edit_address_path(address) %></td>
          <td><%= link_to 'Destroy', address, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

<br>

<%= link_to 'New Address', new_address_path %>

<script type="text/javascript">
  $(document).ready(function() {
    $('#addresses').DataTable();
  });
</script>