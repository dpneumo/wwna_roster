<p id="notice"><%= notice %></p>

<h1>Addresses</h1>

<table class='table table-sm table-bordered table-hover'>
  <thead class='thead-light'>
    <tr>
      <th>Person</th>
      <th>Address</th>
      <th>Type</th>
      <th>Preferred</th>
      <th>Note</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @addresses.each do |address| %>
      <tr>
        <td><%= address.addressee %></td>
        <td><%= address.complete_address %></td>
        <td><%= address.address_type %></td>
        <td><%= address.preferred %></td>
        <td><%= address.note %></td>
        <td><%= link_to 'Show', address_path(address.id) %></td>
        <td><%= link_to 'Edit', edit_address_path(address.id) %></td>
        <td><%= link_to 'Destroy', address_path(address.id), 
                                   method: :delete, 
                                   data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

