<%= form_with(model: address, local: true) do |form| %>

  <%= Shared::ShowErrs.new(@address).show %>

  <% if address.person_id %>
    <%= render  partial: 'shared/readonly_field_bs',
                locals: { form: form, my_field: :person_id,
                          my_label: "Person",
                          my_id: address.person_id,
                          my_display: :fullname } %>
  <% else %>
    <%= render  partial: 'shared/collectselect_bs',
                locals: { form: form, my_field: :person_id,
                          my_collection: Person.all,
                          my_display: :fullname } %>
  <% end %>


  <%= render  partial: 'shared/text_bs',
              locals: { form: form, my_field: :number } %>

  <%= render  partial: 'shared/text_bs',
              locals: { form: form, my_field: :street } %>

  <%= render  partial: 'shared/text_bs',
              locals: { form: form, my_field: :city } %>

  <%= render  partial: 'shared/text_bs',
              locals: { form: form, my_field: :state } %>

  <%= render  partial: 'shared/text_bs',
              locals: { form: form, my_field: :zip } %>

  <%= render  partial: 'shared/text_bs',
              locals: { form: form, my_field: :locn } %>

  <%= render  partial: 'shared/text_bs',
              locals: { form: form, my_field: :preferred } %>

  <%= render  partial: 'shared/text_bs',
              locals: { form: form, my_field: :note } %>

  <%= render  partial: 'shared/form_submit_bs',
              locals: { form: form } %>

<% end %>
