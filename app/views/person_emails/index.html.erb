<p id="notice"><%= notice %></p>

<h1>Person Emails</h1>

<div class='container'>
  <table class='table table-sm table-bordered table-hover'>
    <thead class='thead-light'>
      <tr>
        <th>Person</th>
        <th>Email</th>
        <th>Locn</th>
        <th>Preferred</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @person_emails.each do |person_email| %>
        <tr>
          <td><%= person_email.person_id %></td>
          <td><%= person_email.email_id %></td>
          <td><%= person_email.locn %></td>
          <td><%= person_email.preferred %></td>
          <td><%= link_to 'Show', person_email %></td>
          <td><%= link_to 'Edit', edit_person_email_path(person_email) %></td>
          <td><%= link_to 'Destroy', person_email, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <%== pagy_bootstrap_nav(@pagy) %>

</div>

<br>

<%= link_to 'New Person Email', new_person_email_path %>
