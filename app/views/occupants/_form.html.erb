<%= form_with(model: occupant, local: true) do |form| %>

  <%= render  partial: 'shared/errors',
              locals: { my_model: @occupant } %>


  <% if occupant.house_id %>
    <%= render  partial: 'shared/readonly_field_bs',
                locals: { form: form, my_field: :house_id,
                          my_label: "House",
                          my_id: occupant.house_id,
                          my_display: :street_number } %>
  <% else %>
    <%= render  partial: 'shared/collectselect_bs',
                locals: { form: form, my_field: :house_id,
                          my_collection: House.all,
                          my_display: :street_number } %>
  <% end %>

  <%= render  partial: 'shared/collectselect_bs',
              locals: { form: form, my_field: :person_id,
                        my_collection: Person.all,
                        my_display: :fullname } %>

  <%= render  partial: 'shared/select_bs',
              locals: { form: form, my_field: :relation,
                        collection: Occupant.relations } %>

  <%= render  partial: 'shared/select_bs',
              locals: { form: form, my_field: :status,
                        collection: Occupant.states } %>

  <%= render  partial: 'shared/textarea_bs',
                locals: { form: form, my_field: :note, my_label: 'Note' } %>

  <%= render  partial: 'shared/form_submit_bs',
              locals: { form: form } %>

<% end %>
