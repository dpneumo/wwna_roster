<p id="notice"><%= notice %></p>

<h1>Occupants</h1>

<div class='container'>
  <table class='table table-sm table-bordered table-hover'>
    <thead class='thead-light'>
      <tr>
        <th>House</th>
        <th>Person</th>
        <th>Relation</th>
        <th>Status</th>
        <th>Note</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @occupants.each do |occupant| %>
        <tr>
          <td><%= occupant.house.street_number %></td>
          <td><%= occupant.person.fullname %></td>
          <td><%= occupant.relation %></td>
          <td><%= occupant.status %></td>
          <td><%= occupant.note %></td>
          <td><%= link_to 'Show', occupant %></td>
          <td><%= link_to 'Edit', edit_occupant_path(occupant) %></td>
          <td><%= link_to 'Destroy', occupant, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <%== pagy_bootstrap_nav(@pagy) %>

</div>

<br>

<%= link_to 'New Occupant', new_occupant_path %>
