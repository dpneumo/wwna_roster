<p id="notice"><%= notice %></p>

<h1>Occupants</h1>

<table>
  <thead>
    <tr>
      <th>House</th>
      <th>Person</th>
      <th>Relation</th>
      <th>Status</th>
      <th>Note</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @occupants.each do |occupant| %>
      <tr>
        <td><%= occupant.house_id %></td>
        <td><%= occupant.person_id %></td>
        <td><%= occupant.relation %></td>
        <td><%= occupant.status %></td>
        <td><%= occupant.note %></td>
        <td><%= link_to 'Show', occupant %></td>
        <td><%= link_to 'Edit', edit_occupant_path(occupant) %></td>
        <td><%= link_to 'Destroy', occupant, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

