<%= form_with(model: position, local: true) do |form| %>
  <% errors = Shared::ShowErrs.new(position) %>
  <% input = Shared::Inputs.new(form) %>

  <%= errors.show %>

  <%= input.columns([ { attribute: :person_id, 
                        kind: :select,
                        collection: Person.select_list,
                        selected: position.person_id,
                        disabled: position.person_id,
                        blank: true },
                      { attribute: :person_id, kind: :hidden,
                        value: position.person_id } ]) %>

  <%= input.columns([ { attribute: :name,
                        kind: :select,
                        collection: Position.names,
                        selected: position.name,
                        blank: true } ]) %>

  <%= input.columns([ { attribute: :start, 
                        kind: :date_select,
                        selected: position.start } ]) %>

  <%= input.columns([ { attribute: :stop, 
                        kind: :date_select,
                        selected: position.start } ]) %>

  <%= render  partial: 'shared/form_submit_bs',
              locals: { form: form , my_label: nil} %>
<% end %>
