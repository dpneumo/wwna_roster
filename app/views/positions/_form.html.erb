<%= form_with(model: position, local: true) do |form| %>
  <% errors = Shared::ShowErrs.new(position) %>
  <% input = Shared::Inputs.new(form) %>

  <%= errors.show %>

  <%= input.columns([ { attribute: :name,
                        kind: :select,
                        label: 'Position Name',
                        collection: pdata.position_names,
                        selected: pdata.name,
                        blank: true } ]) %>

  <%= input.columns([ { attribute: :person_id, 
                        kind: :select,
                        collection: pdata.person_selectlist,
                        selected: pdata.person_id,
                        disabled: pdata.person_id,
                        blank: true },
                      { attribute: :person_id, kind: :hidden,
                        value: pdata.person_id } ]) %>

  <%= input.columns([ { attribute: :start, 
                        kind: :date_select,
                        selected: pdata.date_range.start } ]) %>

  <%= input.columns([ { attribute: :stop, 
                        kind: :date_select,
                        selected: pdata.date_range.stop } ]) %>

  <%= render  partial: 'shared/form_submit_bs',
              locals: { form: form , my_label: nil} %>
<% end %>
