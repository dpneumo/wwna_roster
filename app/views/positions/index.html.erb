<p id="notice"><%= notice %></p>

<h1>Officers & Committee Chairs</h1>

<table class='table table-sm table-bordered table-hover'>
  <thead class='thead-light'>
    <tr>
      <th>Person</th>
      <th>Position</th>
      <th>Start</th>
      <th>Stop</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @positions.each do |position| %>
      <tr>
        <td><%= position.person_name %></td>
        <td><%= position.name %></td>
        <td><%= position.start %></td>
        <td><%= position.stop %></td>
        <td><%= link_to 'Show', position %></td>
        <td><%= link_to 'Edit', edit_position_path(position) %></td>
        <td><%= link_to 'Destroy', position, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

