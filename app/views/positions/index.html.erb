<p id="notice"><%= notice %></p>

<h1>Officers & Committee Chairs</h1>

<table class='table table-sm table-bordered table-hover'>
  <thead class='thead-light'>
    <tr>
      <th>Person</th>
      <th>Position</th>
      <th>Date Range</th>
      <th>Stop</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @positions.each do |p| %>
      <% present(p) do |position| %>
        <tr>
          <td><%= position.person_name %></td>
          <td><%= position.name %></td>
          <td><%= position.date_range %></td>
          <td><%= link_to 'Show', position_path(position.id) %></td>
          <td><%= link_to 'Edit', edit_position_path(position.id) %></td>
          <td><%= link_to 'Destroy', position_path(position.id), 
                                     method: :delete, 
                                     data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>

