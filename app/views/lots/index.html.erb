<p id="notice"><%= notice %></p>

<h1>Lots</h1>

<div class='container'>
  <table class='table table-sm table-bordered table-hover'>
    <thead class='thead-light'>
      <tr>
        <th>ID</th>
        <th>Street Number</th>
        <th>Latitude</th>
        <th>Longitude</th>
        <th>Image link</th>
        <th>Note</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @lots.each do |lot| %>
        <tr>
          <td><%= lot.id %></td>
          <td><%= lot.street_number %></td>
          <td><%= lot.latitude %></td>
          <td><%= lot.longitude %></td>
          <td><%= lot.image_link %></td>
          <td><%= lot.note %></td>
          <td><%= link_to 'Show', lot %></td>
          <td><%= link_to 'Edit', edit_lot_path(lot) %></td>
          <td><%= link_to 'Destroy', lot, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <%== pagy_bootstrap_nav(@pagy) %>

</div>

<br>

<%= link_to 'New Lot', new_lot_path %>
