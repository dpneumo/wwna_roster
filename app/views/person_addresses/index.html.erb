<p id="notice"><%= notice %></p>

<h1>Person Addresses</h1>

<table>
  <thead>
    <tr>
      <th>Person</th>
      <th>Address</th>
      <th>Locn</th>
      <th>Preferred</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @person_addresses.each do |person_address| %>
      <tr>
        <td><%= person_address.person_id %></td>
        <td><%= person_address.address_id %></td>
        <td><%= person_address.locn %></td>
        <td><%= person_address.preferred %></td>
        <td><%= link_to 'Show', person_address %></td>
        <td><%= link_to 'Edit', edit_person_address_path(person_address) %></td>
        <td><%= link_to 'Destroy', person_address, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

