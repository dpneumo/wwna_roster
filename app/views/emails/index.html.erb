<p id="notice"><%= notice %></p>

<h1>Emails</h1>

<table class='table table-sm table-bordered table-hover'>
  <thead class='thead-light'>
    <tr>
      <th>Person</th>
      <th>Addr</th>
      <th>Type</th>
      <th>Preferred</th>
      <th>Note</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @emails.each do |e| %>
      <% present(e) do |email| %>
        <tr>
          <td><%= email.person.fullname %></td>
          <td><%= email.addr %></td>
          <td><%= email.email_type %></td>
          <td><%= email.preferred %></td>
          <td><%= email.note %></td>
          <td><%= link_to 'Show', email %></td>
          <td><%= link_to 'Edit', edit_email_path(email) %></td>
          <td><%= link_to 'Destroy', email, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<%== pagy_bootstrap_nav(@pagy) %>

