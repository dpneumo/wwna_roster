<%= form_with(model: email, local: true) do |form| %>

  <%= Shared::ShowErrs.new(@email).show %>

  <% if email.person_id %>
    <%= render  partial: 'shared/readonly_field_bs',
                locals: { form: form, my_field: :person_id,
                          my_label: "Person",
                          my_id: email.person_id,
                          my_display: :fullname } %>
  <% else %>
    <%= render  partial: 'shared/collectselect_bs',
                locals: { form: form, my_field: :person_id,
                          my_collection: Person.all,
                          my_display: :fullname } %>
  <% end %>


  <%= render  partial: 'shared/text_bs',
              locals: { form: form, my_field: :addr } %>

  <%= render  partial: 'shared/text_bs',
              locals: { form: form, my_field: :locn } %>

  <%= render  partial: 'shared/text_bs',
              locals: { form: form, my_field: :preferred } %>

  <%= render  partial: 'shared/textarea_bs',
                locals: { form: form, my_field: :note, my_label: 'Note' } %>

  <%= render  partial: 'shared/form_submit_bs',
              locals: { form: form } %>

<% end %>
