<%= form_with(model: email, local: true) do |form| %>
  <% errors = Shared::ShowErrs.new(email) %>
  <% input = Shared::Inputs.new(form) %>

  <%= errors.show %>

  <%= input.row([ { attribute: :person_id, kind: :select,
                    collection: Person.select_list,
                    selected: email.person_id,
                    disabled: email.person_id },
                  { attribute: :person_id, kind: :hidden,
                    value: email.person_id } ]) %>

  <%= input.row([ { attribute: :addr, label: 'Email Address' } ]) %>

  <%= input.row([ { attribute: :email_type, kind: :select,
                    label: 'Email Type',
                    collection: Email.types,
                    selected: email.email_type || 'Other',
                    blank: false },
                  { attribute: :preferred, kind: :select,
                    collection: [['Yes',true],['No',false]],
                    selected: email.preferred || false,
                    blank: false } ]) %>

  <%= input.row([ { attribute: :note, kind: :textarea } ]) %>

  <%= render  partial: 'shared/form_submit_bs',
              locals: { form: form } %>
<% end %>
