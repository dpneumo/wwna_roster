<%= form_with(model: ownership, local: true) do |form| %>
  <% errors = Shared::ShowErrs.new(ownership) %>
  <% input = Shared::Inputs.new(form) %>

  <%= errors.show %>

  <% if ownership.house_id %>
    <%= input.row([ { kind: :readonly, attribute: :house_id, label: "House",
                      id: ownership.house_id, display: :house_address} ]) %>
  <% else %>
    <%= input.row([ { kind: :collection_select, attribute: :house_id,
                      collection: House.select_list } ]) %>
  <% end %>

  <%= input.row([ { kind: :collection_select, attribute: :person_id,
                      collection: Person.select_list } ]) %>

  <%= render  partial: 'shared/form_submit_bs',
              locals: { form: form } %>

<% end %>

