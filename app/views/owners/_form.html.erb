<%= form_with(model: owner, local: true) do |form| %>

  <% if owner.errors.any? %>
    <div class="row" id="error_explanation">
      <h2><%= pluralize(owner.errors.count, "error") %> prohibited this owner from being saved:</h2>

      <ul>
        <% owner.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>


  <row class="row mb-3">
    <div class="field col-sm">
      <%= form.label :house_id, "House" %>
      <%= form.collection_select :house_id, House.all, :id, :street_number, {include_blank: true, class: "custom-select"} %>
    </div>
  </row>


  <row class="row mb-3">
    <div class="field col-sm">
      <%= form.label :person_id %>
      <%= form.collection_select :person_id, Person.all, :id, :fullname, {include_blank: true, class: "custom-select"} %>
    </div>
  </row>


  <row class="row mb-4">
    <div class="actions">
      <%= form.submit %>
    </div>
  </row>

<% end %>
