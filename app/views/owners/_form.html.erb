<%= form_with(model: owner, local: true) do |form| %>

  <%= render  partial: 'shared/errors',
              locals: { my_model: @owner } %>

  <% if owner.house_id %>
    <%= render  partial: 'shared/readonly_field_bs',
                locals: { form: form, my_field: :house_id,
                          my_label: "House",
                          my_id: owner.house_id,
                          my_display: :street_number } %>
  <% else %>
    <%= render  partial: 'shared/collectselect_bs',
                locals: { form: form, my_field: :house_id,
                          my_collection: House.all,
                          my_display: :street_number } %>
  <% end %>

  <%= render  partial: 'shared/collectselect_bs',
              locals: { form: form, my_field: :person_id,
                        my_collection: Person.all,
                        my_display: :fullname } %>

  <%= render  partial: 'shared/form_submit_bs',
              locals: { form: form } %>

<% end %>

