<%= form_with(model: phone, local: true) do |form| %>

  <%= render  partial: 'shared/errors',
              locals: { my_model: @phone } %>

  <% if phone.person_id %>
    <%= render  partial: 'shared/readonly_field_bs',
                locals: { form: form, my_field: :person_id,
                          my_label: "Person",
                          my_id: phone.person_id,
                          my_display: :fullname } %>
  <% else %>
    <%= render  partial: 'shared/collectselect_bs',
                locals: { form: form, my_field: :person_id,
                          my_collection: Person.all,
                          my_display: :fullname } %>
  <% end %>


  <%= render  partial: 'shared/text_bs',
              locals: { form: form, my_field: :cc } %>

  <%= render  partial: 'shared/text_bs',
              locals: { form: form, my_field: :area } %>

  <%= render  partial: 'shared/text_bs',
              locals: { form: form, my_field: :prefix } %>

  <%= render  partial: 'shared/text_bs',
              locals: { form: form, my_field: :number } %>

  <%= render  partial: 'shared/text_bs',
              locals: { form: form, my_field: :locn } %>

  <%= render  partial: 'shared/text_bs',
              locals: { form: form, my_field: :txt_capable } %>

  <%= render  partial: 'shared/text_bs',
              locals: { form: form, my_field: :preferred } %>

  <%= render  partial: 'shared/textarea_bs',
                locals: { form: form, my_field: :note,
                          my_label: 'Note' } %>

  <%= render  partial: 'shared/form_submit_bs',
              locals: { form: form } %>

<% end %>
