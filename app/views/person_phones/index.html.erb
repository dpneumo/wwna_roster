<p id="notice"><%= notice %></p>

<h1>Person Phones</h1>

<div class='container'>
  <table class='table table-sm table-bordered table-hover'>
    <thead class='thead-light'>
      <tr>
        <th>Person</th>
        <th>Phone</th>
        <th>Locn</th>
        <th>Preferred</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @person_phones.each do |person_phone| %>
        <tr>
          <td><%= person_phone.person_id %></td>
          <td><%= person_phone.phone_id %></td>
          <td><%= person_phone.locn %></td>
          <td><%= person_phone.preferred %></td>
          <td><%= link_to 'Show', person_phone %></td>
          <td><%= link_to 'Edit', edit_person_phone_path(person_phone) %></td>
          <td><%= link_to 'Destroy', person_phone, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  </table>

  <%== pagy_bootstrap_nav_js(@pagy) %>

<%== pagy_bootstrap_nav(@pagy) %>
</div>

